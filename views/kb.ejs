            <li><button class="col-md btn-4 btn-dark"><h6>Level 2</h6></button></li>
            <li><button class="col-md btn-4 btn-dark"><h6>Level 1</h6></button></li>
        </ul>
    </div>
    <div class="question">
        <h2><%= que %></h2>
    </div>
    <div class="row">
        <form action='/verify' method="POST">
            <button class="col-md-6 upper btn left color a" name="button" value='a'><h4>a] <%= a %></h4></button>
            <button class="col-md-6 upper btn color b" name="button" value='b'><h4>b] <%= b %></h4></button>
            <button class="col-md-6 btn  left color c" name="button" value='c'><h4>c] <%= c %></h4></button>
            <button class="col-md-6 btn color d" name="button" value='d'><h4>d] <%= d %></h4></button>
        </form>
    </div>
<script>
     function call(){
        alert("According to Dr Khetmalis the correct answer would be <%= ans %>");
     }

     function half(){
        if ("<%= ans %>" =='a')
        {
            $('.c').prop('disabled', true);
            $('.d').prop('disabled', true);
        }
        else if ("<%= ans %>"=='b')
        {
            $('.a').prop('disabled', true);
            $('.d').prop('disabled', true);
        }
        else if ("<%= ans %>"=='c')
        {
            $('.a').prop('disabled', true);
            $('.b').prop('disabled', true);
        }
        else if ("<%= ans %>"=='d')
        {
            $('.b').prop('disabled', true);
            $('.c').prop('disabled', true);
        }
     }

