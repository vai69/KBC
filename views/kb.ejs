<body>
    <img src="images/download.jpg">
    <div class="lifeline">
        <button type="button" class="btn btn-dark btn-lg btn-circle"  onclick="call(); this.disabled=true"><i class="fa fa-phone-square" aria-hidden="true"></i></button> 
        <button type="button" class="btn btn-dark btn-lg btn-circle" onclick="half(); this.disabled=true">50-50</button>
        <button type="button" class="btn btn-dark btn-lg btn-circle"><i class="fa fa-users" aria-hidden="true"></i></button>
        <button type="button" class="btn btn-dark btn-lg btn-circle"><i class="fa fa-exchange" aria-hidden="true"></i></button>
    </div>
    <div class="timer">
        <p>0</p>
    </div>
    <div class="levels">
        <ul style="padding: 25px">
            <li><button class="col-md btn-4 btn-dark"><h6>Level 10</h6></button></li>
            <li><button class="col-md btn-4 btn-dark"><h6>Level 9</h6></button></li>
            <li><button class="col-md btn-4 btn-dark"><h6>Level 8</h6></button></li>
            <li><button class="col-md btn-4 btn-dark"><h6>Level 7</h6></button></li>
